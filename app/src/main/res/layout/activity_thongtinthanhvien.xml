<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="16dp">
    <ImageView android:id="@+id/imgMember" android:layout_width="60dp" android:layout_height="60dp" android:layout_gravity="center_vertical" android:src="@drawable/quanlyngdung" android:layout_marginRight="16dp"/>
    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
        <TextView android:id="@+id/tvManv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Mã NV" android:textSize="16sp" android:textStyle="bold"/>
        <TextView android:id="@+id/tvten" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tên" android:textSize="14sp"/>
        <TextView android:id="@+id/tvgioitinh" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Giới Tính" android:textSize="14sp"/>
        <TextView android:id="@+id/tvemail" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Email" android:textSize="14sp"/>
        <TextView android:id="@+id/tvPhone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Số điện thoại" android:textSize="14sp"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="end" android:layout_marginTop="8dp">
            <Button android:id="@+id/btCapNhat" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Cập nhật" android:layout_marginRight="8dp"/>
            <Button android:id="@+id/btXoa" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Xóa"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>