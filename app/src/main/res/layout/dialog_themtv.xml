<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:gravity="center"
             android:padding="16dp"
    >




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:textColor="#E71919"
            android:text="Thêm Thông Tin Thành Viên" />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="MaTV" />

        <EditText
            android:id="@+id/matv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textAlignment="center"
            android:inputType="text"
            android:hint="Nhập Mã" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Ten TV" />

        <EditText
            android:id="@+id/tentv"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Nhập tên" />



        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Nam Sinh" />

        <EditText
            android:id="@+id/namsinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Năm Sinh" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giới Tính" />

        <EditText
            android:id="@+id/gioitinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Giới tính" />

        <Button
            android:id="@+id/btXoa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xóa" />

        <Button
            android:id="@+id/btCapNhat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="btCapNhat" />


    </LinearLayout>

</LinearLayout>