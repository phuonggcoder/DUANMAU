<!-- rounded_corner.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="@android:color/transparent"/> <!-- Màu nền trong suốt -->
    <corners android:radius="50dp"/> <!-- Độ cong của góc, thay đổi giá trị radius để điều chỉnh độ cong -->
    <stroke
        android:width="4dp"
        android:color="@android:color/white"/> <!-- Viền nếu cần -->
</shape>
